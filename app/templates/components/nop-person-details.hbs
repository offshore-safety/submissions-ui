{{#if readonly}}
  {{nop-text-field label='Name'
                   value=fullName
                   errors=person.errors
                   errorKey='fullName'}}
  <div>
    {{nop-text-field class='person-position' label='Position' value=person.position errors=person.errors
    errorKey='position'}}
  </div>
  <div>
    <div class='person-contacts'>
      <div class='person-numbers'>
        {{nop-text-field class='person-phone'
                         label='Phone'
                         value=person.phone
                         errors=person.errors
                         errorKey='phoneNumber'}}
        {{nop-text-field class='person-mobile'
                         label='Mobile'
                         value=person.mobile
                         errors=person.errors
                         errorKey='phoneNumber'}}
      </div>
      {{nop-text-field class='person-email'
                       label='Email'
                       value=person.email
                       errors=person.errors
                       errorKey='email'}}
    </div>
    {{#if showPostalAddress}}
      {{nop-address class='person-postal' title='Postal address' address=person.postalAddress readonly=true}}
    {{/if}}
  </div>
{{else}}
  {{nop-input label='Title'
              class='person-title'
              name='person-details-title'
              required=true
              value=person.title
              errors=person.errors
              errorKey='title'}}
  {{nop-input label='First name'
              class='person-first-name'
              name='person-details-first-name'
              required=true
              value=person.firstName
              errors=person.errors
              errorKey='firstName'}}
  {{nop-input label='Last name'
              class='person-last-name'
              name='person-details-last-name'
              required=true
              value=person.lastName
              errors=person.errors
              errorKey='lastName'}}
  {{nop-input label='Position'
              name='person-details-position'
              value=person.position
              required=true
              errors=person.errors
              errorKey='position'}}
  <section>
    {{nop-section-header title='Phone numbers' hint='At least one phone number is required' required=true}}
    <div>
      {{nop-input label='Phone'
                  name='person-details-phone'
                  value=person.phone
                  class='phone-number'
                  errors=person.errors
                  errorKey='phoneNumber'}}
      {{nop-input label='Mobile'
                  name='person-details-mobile'
                  value=person.mobile
                  class='phone-number'
                  errors=person.errors
                  errorKey='phoneNumber'}}
    </div>
  </section>
  {{nop-input label='Email address'
              name='person-details-email'
              type='email'
              value=person.email
              required=true
              errors=person.errors
              errorKey='email'}}
  {{#if showPostalAddress}}
    {{nop-address title='Postal address'
                  hint=postalAddressHint
                  address=person.postalAddress
                  allowPOBox=true}}
  {{/if}}
{{/if}}
