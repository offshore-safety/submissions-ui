{{#if readonly}}
  {{#each titles.titles as |title index|}}
    {{nop-title title=title readonly=true}}
  {{/each}}
{{else}}
  {{#each titles.titles as |title index|}}
    {{#nop-list-item}}
      {{nop-title title=title
                  index=index
                  showRemove=multipleTitles
                  activityTypes=activityTypes
                  removeTitle=(action 'removeTitle')
                  linkedTypesChanged=(action 'linkedTypesChanged')}}
    {{/nop-list-item}}
  {{/each}}

  {{nop-add-another action='addTitle'
                    text='Add another title'
                    class='add-another-title'}}

  {{#if showLevies}}
    {{nop-levies titles=titles.titles}}
  {{/if}}
{{/if}}
