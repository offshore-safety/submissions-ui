{{#if readonly}}
  {{#if showEmails}}
    The following people will receive confirmation emails upon submission:
    <ul class="bullets">
      {{#each additionalInfo.confirmationEmails as |other|}}
        <li>{{other.email}}</li>
      {{/each}}
    </ul>
  {{/if}}
{{else}}
  {{nop-section-header title='Additional confirmation emails' hint='Provide email addresses of others who need to receive confirmation of this submission'}}
  {{#each additionalInfo.confirmationEmails as |email|}}
    {{#nop-list-item}}
      {{nop-confirmation-email email=email showRemove=true removeEmail=(action 'removeConfirmationEmail')}}
    {{/nop-list-item}}
  {{/each}}
  {{nop-add-another action='addConfirmationEmail' text='Add email address' class='add-another-confirmation-email'}}
{{/if}}
