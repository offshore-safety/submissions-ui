{{#nop-page title='Review your submission & submit' class='review-page'}}
  <section>
    {{#nop-review-component title='Submission contact' editLink='fa-confirmation.upload.submission-contact' errors=model.submissionContact.hasErrors}}
      {{nop-submission-contact contact=model.submissionContact readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Attachment' editLink='fa-confirmation.upload.attachment' errors=model.attachment.hasErrors}}
      {{nop-fa-attachment attachment=model.attachment type='confirmation' readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Additional info' editLink='fa-confirmation.upload.additional-info' errors=model.additionalInfo.hasErrors}}
      {{nop-additional-info additionalInfo=model.additionalInfo readonly=true}}
    {{/nop-review-component}}
  </section>
  {{#nop-actions}}
    {{#link-to back}}
      <button>Back</button>
    {{/link-to}}
    <button class='primary' {{action 'submit'}} disabled={{model.hasErrors}}>Submit</button>
  {{/nop-actions}}
{{/nop-page}}
