{{#nop-page title='Review your submission & submit' class='review-page'}}
<section>
  {{#nop-review-component title='Revision type' editLink='environment-plan.revision.revision-type' errors=model.revisionType.hasErrors}}
    {{nop-ep-revision-type revisionType=model.revisionType readonly=true}}
  {{/nop-review-component}}
</section>
  <section>
    {{#nop-review-component title='Activity details' editLink='environment-plan.new.activity-details' errors=model.activityDetails.hasErrors}}
      {{nop-activity-details activityDetails=model.activityDetails readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Titles' editLink='environment-plan.new.titles' errors=model.titles.hasErrors}}
      {{nop-titles titles=model.titles readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Titleholder details' editLink='environment-plan.new.titleholder-details' errors=model.titleholderDetails.hasErrors}}
      {{nop-titleholder-details titleholder=model.titleholderDetails readonly=true}}
    {{/nop-review-component}}
  </section>
  <div class='contacts page-break'>
    <section>
      {{#nop-review-component title='Submission contact' editLink='environment-plan.new.submission-contact' errors=model.submissionContact.hasErrors}}
        {{nop-submission-contact contact=model.submissionContact readonly=true}}
      {{/nop-review-component}}
    </section>
    <section>
      {{#nop-review-component title='Nominated liaison person' editLink='environment-plan.new.liaison-contact' errors=model.liaisonContact.hasErrors}}
        {{nop-liaison-contact contact=model.liaisonContact readonly=true}}
      {{/nop-review-component}}
    </section>
    <section>
      {{#nop-review-component title='Activity contact' editLink='environment-plan.new.activity-contact' errors=model.activityContact.hasErrors}}
        {{nop-activity-contact contact=model.activityContact readonly=true}}
      {{/nop-review-component}}
    </section>
  </div>
  <section>
    {{#nop-review-component title='Environment plan documents' editLink='environment-plan.new.documents' errors=model.documents.hasErrors}}
      {{nop-environment-plan-documents documents=model.documents readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Financial assurance' editLink='environment-plan.new.financial-assurance' errors=model.financialAssurance.hasErrors}}
      {{nop-financial-assurance assurance=model.financialAssurance readonly=true}}
    {{/nop-review-component}}
  </section>
  <div class='page-break' />
  <section>
    {{#nop-review-component title='Additional info' editLink='environment-plan.new.additional-info' errors=model.additionalInfo.hasErrors}}
      {{nop-additional-info additionalInfo=model.additionalInfo readonly=true}}
    {{/nop-review-component}}
  </section>
  <section>
    {{#nop-review-component title='Estimated levies'}}
      {{#if showLevies}}
        {{nop-levies titles=model.titles.titles}}
      {{else}}
        {{#if greenhouseGasActivity}}
          Currently levies do not apply to greenhouse gas activities
        {{else}}
          <div class='error-message'>Levies can only be calculated once errors are rectified</div>
        {{/if}}
      {{/if}}
    {{/nop-review-component}}
  </section>
  {{#nop-actions}}
    {{#link-to back}}
      <button>Back</button>
    {{/link-to}}
    <button class='primary' {{action 'submit'}} disabled={{model.hasErrors}}>Submit</button>
  {{/nop-actions}}
{{/nop-page}}
